pipeline {
  agent any
  stages {
    stage('git scm update') {
      steps {
        git url: 'https://github.com/ojwsakin/jenkins_practice', branch: 'main'
      }
    }
    stage('docker build') {
      steps {
        sh '''
        sudo docker build -t 192.168.0.160:4999/mynginx:latest .
        sudo docker push 192.168.0.160:4999/mynginx:latest
        '''
      }
    }
    
    stage('deploy k8s') {
      steps {
        sh '''
        sudo kubectl delete -f test.yaml 
        sleep 10
        sudo kubectl apply -f test.yml
        '''
      }
    }
    
  }
}

